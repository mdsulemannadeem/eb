<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-20 py-20">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="/owners/admin">All Products</a>
                <a class="block w-fit mb-2" href="/products/create">Create new product</a>
            </div>
        </div>
        <div class="w-[75%] flex flex-col gap-5 h-screen">
            <% if(success && success.length > 0) { %>
                <div class="p-3 rounded-md bg-green-500 text-white">
                    <%= success %>
                </div>
            <% } %>
            <div class="flex justify-between items-center">
                <h2 class="text-2xl font-semibold">All Products</h2>
                <form action="/owners/delete-all" method="POST" onsubmit="return confirm('Are you sure you want to delete all products? This action cannot be undone.');">
                    <button type="submit" class="text-red-500 hover:text-red-700">Delete all</button>
                </form>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
                <% if(products && products.length > 0) { %>
                    <% products.forEach(function(product) { %>
                        <div class="border border-gray-200 rounded-lg overflow-hidden shadow-lg">
                            <div class="w-full h-52 bg-gray-100 flex items-center justify-center">
                                <% if(product.image && product.image.length > 0) { %>
                                    <img src="data:image/jpeg;base64,<%= product.image[0].toString('base64') %>" 
                                         alt="<%= product.name %>" 
                                         class="h-full w-full object-contain">
                                <% } else { %>
                                    <span class="text-gray-400">No image</span>
                                <% } %>
                            </div>
                            <div class="p-4">
                                <div class="flex justify-between items-start mb-2">
                                    <div>
                                        <h3 class="font-medium"><%= product.name %></h3>
                                        <h4 class="text-gray-600">â‚¹ <%= product.price %></h4>
                                        <span class="text-sm text-gray-500"><%= product.productType %></span>
                                    </div>
                                    <div class="flex gap-2">
                                        <a href="/owners/edit-product/<%= product._id %>" 
                                           class="w-7 h-7 flex items-center justify-center rounded-full bg-blue-500 text-white hover:bg-blue-600">
                                            <i class="ri-edit-line"></i>
                                        </a>
                                        <form action="/owners/delete-product/<%= product._id %>" 
                                              method="POST" 
                                              onsubmit="return confirm('Are you sure you want to delete this product?');"
                                              class="inline">
                                            <button type="submit" 
                                                    class="w-7 h-7 flex items-center justify-center rounded-full bg-red-500 text-white hover:bg-red-600">
                                                <i class="ri-delete-bin-line"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-span-full text-center py-10">
                        <p class="text-gray-500">No products available</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>