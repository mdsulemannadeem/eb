                                <div class="p-2 bg-green-100 rounded-lg">
                                    <i class="ri-music-line text-green-600 text-xl"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-500">Beginner Banjos</p>
                                    <p class="text-lg font-semibold text-gray-900"><%= products.filter(p => p.productType === 'Beginner Banjo').length %></p>
                                </div>
                            </div>
                        </div>
                        
