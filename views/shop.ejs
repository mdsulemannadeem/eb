                        <!-- Quick view button that appears on hover -->
                        <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                          <a href="/product-show/<%= pro._id %>" class="bg-white/80 backdrop-blur-sm px-4 py-2 rounded-full text-gray-800 font-medium hover:bg-white transition-colors shadow-md">
                            Quick View
                          </a>
                        </div>
                      </div>
                      
                      <!-- Product info -->
                      <div class="p-4">
                        <div class="flex justify-between items-start">
                          <h3 class="font-medium text-gray-800 truncate"><%= pro.name %></h3>
                          <span class="text-xs px-2 py-1 bg-gray-100 rounded-full"><%= pro.productType %></span>
                        </div>
                        
                        <div class="mt-2 flex items-center gap-2">
                          <% if (discount > 0) { %>
                            <span class="line-through text-gray-400 text-base">₹ <%= price %></span>
                            <span class="font-bold text-red-500 text-xl">₹ <%= finalPrice %></span>
                          <% } else { %>
