<!-- Products section with responsive grid -->
<div class="w-full py-4 sm:py-6 md:py-8 px-4 sm:px-6 md:px-8 lg:px-12 flex flex-col gap-4 sm:gap-6">
  <!-- Product Type Filter Controls -->
  <div class="flex flex-wrap justify-center gap-2 sm:gap-3 mb-4 sm:mb-6">
    <a href="/"
       class="px-3 sm:px-4 py-2 text-xs sm:text-sm md:text-base rounded-full <%= activeType === 'all' ? 'bg-red-500 text-white' : 'bg-gray-200 text-gray-700' %> transition-colors hover:bg-red-400 whitespace-nowrap">
      All Musical Instrument
    </a>
    <% productTypes.forEach(function(type) { %>
    <a href="/?type=<%= encodeURIComponent(type) %>"
       class="px-3 sm:px-4 py-2 text-xs sm:text-sm md:text-base rounded-full <%= activeType === type ? 'bg-red-500 text-white' : 'bg-gray-200 text-gray-700' %> transition-colors hover:bg-red-400 whitespace-nowrap">
      <%= type %>
    </a>
    <% }); %>
  </div>

  <!-- Product Count Display -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-4 gap-2">
    <h2 class="text-lg sm:text-xl md:text-2xl font-semibold text-center sm:text-left">
      <% if(activeType !== 'all') { %> 
        <%= activeType %> (<%= products.length %>)
      <% } else { %> 
        All Products (<%= products.length %>)
      <% } %>
    </h2>
  </div>

  <% if (products && products.length > 0) { %>
  <div class="grid grid-cols-1 xs:grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-3 sm:gap-4 md:gap-5">
    <% products.forEach(function(pro) { %>
    <div class="border-[#e5e5e5] border-2 sm:border-[3px] rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
      <div class="w-full h-40 sm:h-48 md:h-52 flex justify-center items-center bg-[<%= pro.bgcolor %>] p-2">
        <a href="/product-show/<%= pro._id %>" 
           class="product-image-container block w-full h-full" 
           data-product-id="<%= pro._id %>">
          <img class="w-full h-full object-contain mx-auto transition-opacity duration-300 hover:opacity-90"
               src="data:image/jpeg;base64,<%= pro.image && pro.image[0] ? Buffer.from(pro.image[0]).toString('base64') : '' %>"
               alt="<%= pro.name %>" />
        </a>
      </div>
      <div class="flex justify-between bg-[<%= pro.panelcolor %>] items-center px-3 sm:px-4 py-3 sm:py-4 text-[<%= pro.textcolor %>]">
        <div class="flex-1 min-w-0">
          <h3 class="text-sm sm:text-base font-medium truncate"><%= pro.name %></h3>
          <h4 class="text-sm sm:text-base font-semibold" data-price="<%= pro.price %>">₹ <%= pro.price %></h4>
          <!-- Display product type -->
          <span class="inline-block text-xs sm:text-sm mt-1 px-2 py-1 bg-black bg-opacity-20 rounded-full truncate max-w-full">
            <%= pro.productType %>
          </span>
        </div>
        <div class="flex gap-1 sm:gap-2 ml-2">
          <a class="w-6 h-6 sm:w-7 sm:h-7 flex items-center justify-center rounded-full bg-white shadow-md hover:bg-gray-100 transition-colors"
             href="<%= loggedin ? `/addtocart/${pro._id}` : '/login?redirect=true' %>">
            <i class="ri-add-line text-sm sm:text-base"></i>
          </a>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } else { %>
  <div class="text-center py-12 sm:py-16">
    <div class="mx-auto w-16 h-16 sm:w-20 sm:h-20 bg-gray-100 rounded-full flex items-center justify-center mb-4">
      <i class="ri-music-line text-2xl sm:text-3xl text-gray-400"></i>
    </div>
    <p class="text-base sm:text-lg text-gray-600">No products available for this category.</p>
  </div>
  <% } %>
</div>

