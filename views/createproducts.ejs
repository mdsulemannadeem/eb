                </form>
            </main>
        </div>
    </div>
</div>

<script>
// File size validation on client side
document.addEventListener('DOMContentLoaded', function() {
    const fileInputs = document.querySelectorAll('input[type="file"]');
    const maxFileSize = 50 * 1024 * 1024; // 50MB in bytes
    
    fileInputs.forEach(input => {
        input.addEventListener('change', function(e) {
            const files = e.target.files;
            let totalSize = 0;
            let hasError = false;
            
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                totalSize += file.size;
                
                // Check individual file size
                if (file.size > maxFileSize) {
                    alert(`File "${file.name}" is too large. Maximum size is 50MB per file.`);
                    e.target.value = ''; // Clear the input
                    hasError = true;
                    break;
                }
                
                // Check file type
                if (!file.type.startsWith('image/')) {
                    alert(`File "${file.name}" is not an image. Please select only image files.`);
                    e.target.value = ''; // Clear the input
                    hasError = true;
                    break;
                }
            }
            
            // Show file size info
            if (!hasError && files.length > 0) {
                const sizeInfo = input.parentElement.querySelector('.file-size-info');
                if (sizeInfo) {
                    sizeInfo.remove();
                }
                
                const totalSizeMB = (totalSize / (1024 * 1024)).toFixed(2);
                const info = document.createElement('div');
                info.className = 'file-size-info text-xs text-gray-600 mt-1';
                info.textContent = `Selected: ${files.length} file(s), Total size: ${totalSizeMB} MB`;
                input.parentElement.appendChild(info);
            }
        });
    });
});
</script>

