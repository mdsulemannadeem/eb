<%- include('./partials/header') %>

<!-- Add a main content wrapper -->
<main class="py-5 min-h-screen bg-gradient-to-r from-gray-200 to-blue-100">
  <!-- Link boxicons -->
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

  <!-- Flash messages -->
  <% if(error && error.length > 0) { %>
      <div class="fixed top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-4 rounded-md bg-red-500 shadow-lg z-50">
          <span class="inline-block text-white font-medium"><%= error %></span>
      </div>
  <% } %>

  <% if(message && message.length > 0) { %>
      <div class="fixed top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-yellow-500">
          <span class="inline-block mt-1 mb-1 text-white"><%= message %></span>
      </div>
  <% } %>

  <div class="flex justify-center items-center min-h-[calc(100vh-200px)] px-4 py-8">
    <div class="w-full max-w-4xl mx-auto">
      <div class="container relative bg-white rounded-lg shadow-lg overflow-hidden h-[550px]">
        <!-- Login Form -->
        <div class="form-box login absolute top-0 left-0 w-1/2 h-full p-8 flex flex-col justify-center z-[2]">
          <form action="/users/login" method="post" autocomplete="off" class="w-full">
            <h1 class="text-3xl font-bold mb-6">Login</h1>
            <div class="relative w-full my-4">
              <input type="email" placeholder="Email" name="email" required 
                class="w-full pr-10 pl-4 py-3 border border-gray-300 rounded focus:border-blue-500 focus:outline-none transition-colors duration-300">
              <i class='bx bxs-user absolute right-4 top-1/2 -translate-y-1/2 text-gray-500'></i>
            </div>
            <div class="relative w-full my-4">
              <input type="password" placeholder="Password" name="password" required
                class="w-full pr-10 pl-4 py-3 border border-gray-300 rounded focus:border-blue-500 focus:outline-none transition-colors duration-300">
              <i class='bx bxs-lock-alt absolute right-4 top-1/2 -translate-y-1/2 text-gray-500'></i>
            </div>
            <div class="text-right mt-3 mb-6">
              <a href="#" class="text-sm text-gray-600 hover:text-blue-500 hover:underline">Forgot password?</a>
            </div>
            <button type="submit" class="w-full py-3 px-4 rounded bg-blue-500 text-white font-semibold cursor-pointer transition-colors duration-300 hover:bg-blue-600">Login</button>
            <p class="text-center mt-4 text-gray-600">or login with social platforms</p>
            <div class="flex justify-center mt-6">
              <a href="#" class="flex justify-center items-center w-10 h-10 rounded-full bg-gray-100 mx-2 transition-colors duration-300 hover:bg-blue-500 hover:text-white"><i class='bx bxl-google'></i></a>
              <a href="#" class="flex justify-center items-center w-10 h-10 rounded-full bg-gray-100 mx-2 transition-colors duration-300 hover:bg-blue-500 hover:text-white"><i class='bx bxl-facebook'></i></a>
              <a href="#" class="flex justify-center items-center w-10 h-10 rounded-full bg-gray-100 mx-2 transition-colors duration-300 hover:bg-blue-500 hover:text-white"><i class='bx bxl-github'></i></a>
              <a href="#" class="flex justify-center items-center w-10 h-10 rounded-full bg-gray-100 mx-2 transition-colors duration-300 hover:bg-blue-500 hover:text-white"><i class='bx bxl-linkedin'></i></a>
            </div>
          </form>
        </div>

        <!-- Registration Form -->
        <div class="form-box register absolute top-0 right-[-50%] w-1/2 h-full p-8 flex flex-col justify-center z-[1] opacity-0">
          <form action="/users/register" method="post" autocomplete="off" class="w-full">
            <h1 class="text-3xl font-bold mb-6">Registration</h1>
            <div class="relative w-full my-4">
              <input type="text" placeholder="Full Name" name="fullname" required
                class="w-full pr-10 pl-4 py-3 border border-gray-300 rounded focus:border-blue-500 focus:outline-none transition-colors duration-300">
              <i class='bx bxs-user absolute right-4 top-1/2 -translate-y-1/2 text-gray-500'></i>
            </div>
            <div class="relative w-full my-4">
              <input type="email" placeholder="Email" name="email" required
                class="w-full pr-10 pl-4 py-3 border border-gray-300 rounded focus:border-blue-500 focus:outline-none transition-colors duration-300">
              <i class='bx bxs-envelope absolute right-4 top-1/2 -translate-y-1/2 text-gray-500'></i>
            </div>
            <div class="relative w-full my-4">
              <input type="password" placeholder="Password" name="password" required
                class="w-full pr-10 pl-4 py-3 border border-gray-300 rounded focus:border-blue-500 focus:outline-none transition-colors duration-300">
              <i class='bx bxs-lock-alt absolute right-4 top-1/2 -translate-y-1/2 text-gray-500'></i>
            </div>
            <div class="relative w-full my-4">
              <input type="number" placeholder="Phone Number (Optional)" name="contact"
                class="w-full pr-10 pl-4 py-3 border border-gray-300 rounded focus:border-blue-500 focus:outline-none transition-colors duration-300">
              <i class='bx bxs-phone absolute right-4 top-1/2 -translate-y-1/2 text-gray-500'></i>
            </div>
            <button type="submit" class="w-full py-3 px-4 rounded bg-blue-500 text-white font-semibold cursor-pointer transition-colors duration-300 hover:bg-blue-600">Register</button>
            <p class="text-center mt-4 text-gray-600">or Register with social platforms</p>
            <div class="flex justify-center mt-6">
              <a href="#" class="flex justify-center items-center w-10 h-10 rounded-full bg-gray-100 mx-2 transition-colors duration-300 hover:bg-blue-500 hover:text-white"><i class='bx bxl-google'></i></a>
              <a href="#" class="flex justify-center items-center w-10 h-10 rounded-full bg-gray-100 mx-2 transition-colors duration-300 hover:bg-blue-500 hover:text-white"><i class='bx bxl-facebook'></i></a>
              <a href="#" class="flex justify-center items-center w-10 h-10 rounded-full bg-gray-100 mx-2 transition-colors duration-300 hover:bg-blue-500 hover:text-white"><i class='bx bxl-github'></i></a>
              <a href="#" class="flex justify-center items-center w-10 h-10 rounded-full bg-gray-100 mx-2 transition-colors duration-300 hover:bg-blue-500 hover:text-white"><i class='bx bxl-linkedin'></i></a>
            </div>
          </form>
        </div>

        <!-- Toggle Box -->
        <div class="toggle-box absolute top-0 right-0 w-1/2 h-full bg-gradient-to-br from-blue-500 to-blue-700 text-white flex flex-col justify-center text-center transition-transform duration-500 ease-in-out z-10">
          <div class="toggle-panel toggle-left p-8">
            <h1 class="text-2xl font-bold mb-4">Hello, Welcome!</h1>
            <p class="mb-6">Don't have an account?</p>
            <button class="register-btn w-3/4 py-3 px-4 rounded bg-transparent border border-white text-white font-semibold cursor-pointer transition-colors duration-300 hover:bg-white hover:text-blue-700">Register</button>
          </div>
          <div class="toggle-panel toggle-right p-8 hidden">
            <h1 class="text-2xl font-bold mb-4">Welcome Back!</h1>
            <p class="mb-6">Already have an account?</p>
            <button class="login-btn w-3/4 py-3 px-4 rounded bg-transparent border border-white text-white font-semibold cursor-pointer transition-colors duration-300 hover:bg-white hover:text-blue-700">Login</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Add this custom CSS for transitions that Tailwind can't handle well -->
  <style>
    /* Keep existing toggle animations */
    .container.active .form-box.login {
      left: -50%;
      opacity: 0;
    }
    
    .container.active .form-box.register {
      right: 0;
      z-index: 2;
      opacity: 1;
    }
    
    .container.active .toggle-box {
      transform: translateX(-100%);
    }
    
    /* Toggle panel display rules */
    .container:not(.active) .toggle-left {
      display: block;
    }
    
    .container:not(.active) .toggle-right {
      display: none;
    }
    
    .container.active .toggle-left {
      display: none;
    }
    
    .container.active .toggle-right {
      display: block;
    }

    /* Enhanced responsive modifications */
    @media (max-width: 1023px) {
      .container {
        height: auto;
        min-height: 600px;
      }
    }
    
    @media (max-width: 767px) {
      .container {
        height: auto;
      }
      
      .form-box {
        width: 100% !important;
        position: relative !important;
        left: 0 !important;
        right: 0 !important;
        opacity: 1 !important;
        display: block;
      }
      
      .form-box.login {
        display: block;
      }
      
      .form-box.register {
        display: none;
      }
      
      .container.active .form-box.login {
        display: none;
      }
      
      .container.active .form-box.register {
        display: block;
      }
      
      .toggle-box {
        position: relative !important;
        width: 100% !important;
        height: auto !important;
        transform: none !important;
        border-radius: 0.5rem;
        margin-top: 1rem;
      }
      
      .toggle-panel {
        padding: 1rem !important;
      }
    }
    
    @media (max-width: 480px) {
      .container {
        padding: 1rem;
      }
      
      .form-box {
        padding: 1rem !important;
      }
      
      h1 {
        font-size: 1.5rem !important;
      }
      
      .social-icons {
        flex-wrap: wrap;
      }
      
      .social-icons a {
        margin-bottom: 0.5rem;
      }
    }
  </style>

  <!-- Add this script to improve mobile experience -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const container = document.querySelector('.container');
      const registerBtn = document.querySelector('.register-btn');
      const loginBtn = document.querySelector('.login-btn');
      
      // Check screen size and adjust layout
      function checkScreenSize() {
        if (window.innerWidth <= 767) {
          // On mobile: arrange elements vertically
          const forms = document.querySelectorAll('.form-box');
          const toggleBox = document.querySelector('.toggle-box');
          
          if (toggleBox && toggleBox.parentNode) {
            // Move toggle box after forms for mobile layout
            toggleBox.parentNode.appendChild(toggleBox);
          }
        }
      }
      
      // Run on page load
      checkScreenSize();
      
      // Run on window resize
      window.addEventListener('resize', checkScreenSize);
      
      // Handle toggle buttons
      if (container && registerBtn && loginBtn) {
        registerBtn.addEventListener('click', function() {
          container.classList.add('active');
        });
        
        loginBtn.addEventListener('click', function() {
          container.classList.remove('active');
        });
      }
    });
  </script>
</main>

<%- include('./partials/footer') %>