<!-- WhatsApp Widget JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const whatsappBtn = document.getElementById('whatsapp-main-btn');
    const whatsappModal = document.getElementById('whatsapp-modal');
    const closeModalBtn = document.getElementById('close-whatsapp-modal');
    const modalContent = document.getElementById('whatsapp-modal-content');
    
    // Optional: Open modal on right-click for more options
    whatsappBtn?.addEventListener('contextmenu', function(e) {
        e.preventDefault();
        openWhatsAppModal();
    });
    
    // Close modal functionality
    closeModalBtn?.addEventListener('click', closeWhatsAppModal);
    whatsappModal?.addEventListener('click', function(e) {
        if (e.target === whatsappModal) {
            closeWhatsAppModal();
        }
    });
    
    // Escape key to close modal
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && !whatsappModal.classList.contains('hidden')) {
            closeWhatsAppModal();
        }
    });
    
    function openWhatsAppModal() {
        whatsappModal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        setTimeout(() => {
            whatsappModal.classList.add('show');
        }, 10);
    }
    
    function closeWhatsAppModal() {
        whatsappModal.classList.remove('show');
        setTimeout(() => {
            whatsappModal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }, 300);
    }
    
    // Add notification dot for first-time visitors
    if (!localStorage.getItem('whatsapp-seen')) {
        const notificationDot = document.createElement('div');
        notificationDot.className = 'absolute -top-1 -right-1 w-4 h-4 bg-red-500 rounded-full border-2 border-white animate-pulse';
        whatsappBtn.querySelector('a').appendChild(notificationDot);
        
        // Remove after user interacts
        whatsappBtn.addEventListener('click', function() {
            localStorage.setItem('whatsapp-seen', 'true');
            notificationDot.remove();
        });
    }
});
</script>