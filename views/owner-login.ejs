<%- include('./partials/header') %>
<div class="w-full h-screen flex px-20">
    <div class="w-full flex items-center justify-center h-screen">
        <div class="w-full max-w-md px-8">
            <h4 class="text-2xl capitalize mb-5">Admin Access Only</h4>
            <% if(error && error.length > 0){ %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                    <%= error %>
                </div>
            <% } %>
            <form action="/owners/login" method="post">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Admin Email" name="email">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white cursor-pointer" type="submit" value="Login as Admin">
            </form>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>